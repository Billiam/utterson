<a class="btn btn-primary pull-right" href="/hyde/create" role="button">Create website</a>

<h1 class="page-header">Jekyll websites</h1>

<div class="table-responsive">

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Production URL</th>
        </tr>
        </thead>
        <tbody>
            <% @sites.each do |site| %>
            <tr>
                <td><a href="<%= url("/site/#{site.id}") %>"><%= site.id %></a></td>
                <td><%= site.config['title'] %></td>
                <td><a href="<%= site.prod_url %>"><%= site.prod_url %></a></td>
            </tr>
            <% end %>
        </tbody>
    </table>

</div>
